/* pages/res_detail/res_detail.wxss */
page {
  height: 100%;
}
.wrap {
  height: 100%;
}
.wrap .res_title {
  position: fixed;
  top: 0;
  left: 0;
  height: 120rpx;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 40rpx;
  background-color: var(--themeColor);
  z-index: 1;
  color: #fff;
}
.wrap .zhanwei {
  height: 120rpx;
  background-color: black;
}
.wrap .container {
  height: calc( 100vh - 240rpx );
  display: flex;
  background-color: white;
}
.wrap .container .left_menu {
  flex: 2;
}
.wrap .container .left_menu .menu {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 10rpx;
  height: 80rpx;
  border-bottom: 5rpx solid var(--themeColor);
}
.wrap .container .right_content {
  flex: 7;
}
.wrap .container .right_content .content {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 10rpx;
  height: 200rpx;
}
.wrap .container .right_content .content .goods_image_wrap {
  height: 100%;
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}
.wrap .container .right_content .content .goods_image_wrap image {
  height: 100%;
}
.wrap .container .right_content .content .goods_info_wrap {
  flex: 4;
  padding-left: 10rpx;
}
.wrap .container .right_content .content .goods_info_wrap .goods_name {
  font-size: 40rpx;
}
.wrap .container .right_content .content .goods_info_wrap .goods_dec {
  color: gray;
  padding: 10rpx;
}
.wrap .container .right_content .content .goods_info_wrap .goods_selled {
  color: gray;
  padding: 10rpx;
}
.wrap .container .right_content .content .goods_info_wrap .price_add_wrap {
  display: flex;
  justify-content: space-between;
}
.wrap .container .right_content .content .goods_info_wrap .price_add_wrap .price {
  color: var(--themeColor);
  font-size: 36rpx;
}
.wrap .container .right_content .content .goods_info_wrap .price_add_wrap .add {
  width: 55rpx;
  height: 55rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border: 1rpx solid #ccc;
}
.wrap .footer_tool {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 120rpx;
  background-color: #fff;
  display: flex;
  border-top: 1rpx solid #ccc;
}
.wrap .footer_tool .car {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #fff;
  font-size: 32rpx;
  font-weight: 600;
  background-color: var(--themeColor);
}
.wrap .footer_tool .total_price_wrap {
  flex: 5;
  display: flex;
  text-align: left;
  justify-content: center;
  align-items: center;
}
.wrap .footer_tool .total_price_wrap .total_price .total_price_text {
  color: var(--themeColor);
  font-size: 34rpx;
  font-weight: 600;
}
.wrap .footer_tool .order_pay_wrap {
  flex: 3;
  background-color: var(--themeColor);
  color: #fff;
  font-size: 32rpx;
  font-weight: 600;
  display: flex;
  justify-content: center;
  align-items: center;
}
